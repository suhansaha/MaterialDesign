<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/appBar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawyer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="in.suhan.materialdesign.MainActivity">

            <in.suhan.materialdesign.SlidingTabLayout.SlidingTabLayout
                android:id="@+id/sliding_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

            </in.suhan.materialdesign.SlidingTabLayout.SlidingTabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1">

            </android.support.v4.view.ViewPager>


        </LinearLayout>

        <fragment
            android:id="@+id/app_drawyer"
            android:name="in.suhan.materialdesign.NavigationDrawyer"
            android:layout_width="@dimen/app_drawyer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawyer"
            tools:layout="@layout/fragment_navigation_drawyer" />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>